class Solution {
    public int maxScoreSightseeingPair(int[] A) {
          int N = A.length;
        int left = A[0]+0;
        int right = 0; 
        int max = 0;

        for (int i=1; i<N; i++){
            right = A[i]-i;
            max = Math.max(max, left+right);
            left = Math.max(left, A[i]+i); 
        }
        return max;
    }
}
